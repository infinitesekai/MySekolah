<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SchoolEnrollment.SchoolForm3"
    android:background="@drawable/bg_gradient">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Application Form"
        android:fontFamily="@font/robotobold"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"/>

    <View
        android:id="@+id/bg_round_rec"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_alignBottom="@+id/fragment_container"
        android:layout_marginTop="108dp"
        android:background="@drawable/bg_round_rec"
        android:foregroundGravity="bottom" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="800dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="800dp">


                <TextView
                    android:id="@+id/chooseSchoolTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/robotobold"
                    android:text="Choose of School"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:layout_marginTop="10dp"
                    />

                <!--<LinearLayout
                    android:id="@+id/typeRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/chooseSchoolTitle"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/robotobold"
                        android:text="*"
                        android:textColor="@color/red"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/robotobold"
                        android:text="Type of School:"
                        android:textColor="@color/black"
                        android:textSize="16dp" />

                    <ImageButton
                        android:id="@+id/SchoolTypeInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_help_24"
                        android:adjustViewBounds="true"
                        android:layout_marginTop="12dp"
                        android:background="?attr/selectableItemBackground"
                        android:scaleType="fitXY"/>

                    <Spinner
                        android:id="@+id/spinnerSchoolType"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/lightGrey" />
                </LinearLayout>-->

                <LinearLayout
                    android:id="@+id/stateRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/chooseSchoolTitle"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/robotobold"
                        android:text="*"
                        android:textColor="@color/red"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/robotobold"
                        android:text="State:"
                        android:textColor="@color/black"
                        android:textSize="16dp" />


                    <Spinner
                        android:id="@+id/spinnerStateSchool"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_marginStart="35dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/lightGrey" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/districtRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/stateRow"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/robotobold"
                        android:text="*"
                        android:textColor="@color/red"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/robotobold"
                        android:text="District:"
                        android:textColor="@color/black"
                        android:textSize="16dp" />


                    <Spinner
                        android:id="@+id/spinnerDistrictSchool"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/lightGrey" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/schoolRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/districtRow"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/robotobold"
                        android:text="*"
                        android:textColor="@color/red"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/robotobold"
                        android:text="List of School:"
                        android:textColor="@color/black"
                        android:textSize="16dp" />

                    <ImageButton
                        android:id="@+id/SchoolListInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_help_24"
                        android:adjustViewBounds="true"
                        android:layout_marginTop="12dp"
                        android:background="?attr/selectableItemBackground"
                        android:scaleType="fitXY"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/schoolOptionsRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/schoolRow"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <Spinner
                    android:id="@+id/spinnerSchoolList"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginStart="33dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/lightGrey" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/distanceRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/schoolOptionsRow"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/robotobold"
                        android:text="*"
                        android:textColor="@color/red"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/robotobold"
                        android:text="Distance:"
                        android:textColor="@color/black"
                        android:textSize="16dp" />

                    <ImageButton
                        android:id="@+id/distanceInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_help_24"
                        android:adjustViewBounds="true"
                        android:layout_marginTop="20dp"
                        android:background="?attr/selectableItemBackground"
                        android:scaleType="fitXY"/>

                    <EditText
                        android:id="@+id/etDistance"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="12dp"
                        android:background="@color/lightGrey"
                        android:fontFamily="@font/robotoregular"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:padding="10dp"
                        android:inputType="number"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:paddingLeft="10dp"
                        android:text="KM"
                        android:fontFamily="@font/robotoregular"
                        android:textColor="@color/black"
                        android:textSize="16dp"/>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/buttonRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/distanceRow"
                    android:layout_marginTop="50dp"
                    android:layout_centerHorizontal="true">

                    <Button
                        android:id="@+id/btnBack_sc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="100dp"
                        android:background="@drawable/rounded_btn_grey"
                        android:text="Back"
                        android:textColor="@color/black"
                        android:layout_centerHorizontal="true" />

                    <Button
                        android:id="@+id/btnSubmit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="55dp"
                        android:background="@drawable/rounded_btn_black"
                        android:text="Submit"
                        android:textColor="@color/white"
                        android:layout_centerHorizontal="true" />
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navigation" >


    </FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/cardview_light_background"
        app:menu="@menu/bottom_navigation"/>

</RelativeLayout>