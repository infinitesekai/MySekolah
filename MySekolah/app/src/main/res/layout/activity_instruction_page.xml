<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_round_corner"
    android:orientation="vertical"
    tools:context=".PersonalityCareerTest.InstructionPage">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:lineSpacingMultiplier="1.5"
        android:text="This test is a RIASEC Test"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textSize="15sp" />

    <View
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="@android:color/darker_gray" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_gravity="center"
        android:lineSpacingMultiplier="1.5"
        android:text="This test is a RIASEC TestThe test consists of 42 statement. Read each statement. You only have two options which are agree and disagree. Choose one to fill in the circle. The test will take most five to ten minutes to complete."
        android:textAlignment="center"
        android:textSize="15sp" />

    <View
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="40dp"
        android:lineSpacingMultiplier="1.5"
        android:text="There are no right or wrong answers!"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/start_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/rounded_btn_black"
        android:text="Start"
        android:textColor="@color/white" />
</LinearLayout>