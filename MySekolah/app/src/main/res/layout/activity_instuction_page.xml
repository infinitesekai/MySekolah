<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InstuctionPage"
    android:background="@drawable/bg_gradient">

    <FrameLayout
        android:id="@+id/title_instruction"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="161dp"
            android:fontFamily="@font/robotobold"
            android:text="Instruction"
            android:textColor="@color/white"
            android:textSize="30sp" />
    </FrameLayout>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_instruction">

        <androidx.cardview.widget.CardView
            android:layout_width="352dp"
            android:layout_height="501dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="216dp"
            android:foregroundGravity="center"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="50dp"
                    android:lineSpacingMultiplier="1.5"
                    android:text="This test is a RIASEC Test"
                    android:textAlignment="center"
                    android:textSize="15sp" />

                <View
                    android:layout_width="200dp"
                    android:layout_height="1dp"
                    android:layout_marginStart="75dp"
                    android:layout_marginTop="20dp"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="35dp"
                    android:lineSpacingMultiplier="1.5"
                    android:text="This test is a RIASEC TestThe test consists of 42 statement. Read each statement. You only have two options which are agree and disagree. Choose one to fill in the circle.  The test will take most five to ten minutes to complete."
                    android:textAlignment="center"
                    android:textSize="15sp" />

                <View
                    android:layout_width="200dp"
                    android:layout_height="1dp"
                    android:layout_marginStart="75dp"
                    android:layout_marginTop="20dp"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginBottom="40dp"
                    android:lineSpacingMultiplier="1.5"
                    android:text="There are no right or wrong answers!"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/start_test"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="125dp"
                    android:background="@color/black"
                    android:text="Start"
                    android:textColor="@color/white" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/cardview_light_background"
        app:menu="@menu/bottom_navigation"/>


</RelativeLayout>