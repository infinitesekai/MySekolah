<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SchoolEnrollment.SchoolForm2"
    android:background="@drawable/bg_gradient">


    <FrameLayout
        android:id="@+id/application_title"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <TextView
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:text="Application Form"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:layout_margin="35dp"
            android:fontFamily="@font/robotobold" />

    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/application_title"
        android:layout_alignParentBottom="true">

        <View
            android:id="@+id/bg_round_rec"
            android:layout_width="wrap_content"
            android:layout_height="950dp"
            android:background="@drawable/bg_round_rec" />
    </FrameLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="950dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="950dp">


                <TextView
                    android:id="@+id/infoParentTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/robotobold"
                    android:text="Information of Parent"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:layout_marginTop="5dp"
                    />

                <LinearLayout
                    android:id="@+id/icRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/infoParentTitle"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/robotobold"
                        android:text="No IC:"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        />

                    <TextView
                        android:id="@+id/tvICPr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/robotoregular"
                        android:text="ICView"
                        android:textColor="@color/black"
                        android:textSize="16dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/nameRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/icRow"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/robotobold"
                        android:text="Name:"
                        android:textColor="@color/black"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/tvNamePr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="45dp"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/robotoregular"
                        android:text="NameView"
                        android:textColor="@color/black"
                        android:textSize="16dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/genderRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nameRow"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/robotobold"
                        android:text="Gender:"
                        android:textColor="@color/black"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/tvGenderPr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35dp"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/robotoregular"
                        android:text="GenderView"
                        android:textColor="@color/black"
                        android:textSize="16dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/raceRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/genderRow"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/robotobold"
                        android:text="Race:"
                        android:textColor="@color/black"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/tvRacePr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="52dp"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/robotoregular"
                        android:text="RaceView"
                        android:textColor="@color/black"
                        android:textSize="16dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/religionRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/raceRow"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">


                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/robotobold"
                        android:text="Religion:"
                        android:textColor="@color/black"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/tvReligionPr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/robotoregular"
                        android:text="ReligionView"
                        android:textColor="@color/black"
                        android:textSize="16dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/nationalityRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/religionRow"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/robotobold"
                        android:text="Nationality:"
                        android:textColor="@color/black"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/tvNationalityPr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="11dp"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/robotoregular"
                        android:text="NationalityView"
                        android:textColor="@color/black"
                        android:textSize="16dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/addressRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nationalityRow"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/robotobold"
                        android:text="*"
                        android:textColor="@color/red"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/robotobold"
                        android:text="Address:"
                        android:textColor="@color/black"
                        android:textSize="16dp" />



                        <EditText
                            android:id="@+id/etAddressPr"
                            android:layout_width="250dp"
                            android:layout_height="80dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginStart="25dp"
                            android:background="@color/lightGrey"
                            android:fontFamily="@font/robotoregular"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:padding="10dp"/>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/postcodeRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/addressRow"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">


                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/robotobold"
                        android:text="*"
                        android:textColor="@color/red"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/robotobold"
                        android:text="Posscode:"
                        android:textColor="@color/black"
                        android:textSize="16dp" />



                        <EditText
                            android:id="@+id/etPosPr"
                            android:layout_width="60dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="12dp"
                            android:layout_marginStart="15dp"
                            android:background="@color/lightGrey"
                            android:fontFamily="@font/robotoregular"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:inputType="number"
                            android:padding="10dp"/>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/stateRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/postcodeRow"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/robotobold"
                        android:text="*"
                        android:textColor="@color/red"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/robotobold"
                        android:text="State:"
                        android:textColor="@color/black"
                        android:textSize="16dp" />

                    <Spinner
                        android:id="@+id/spinnerStatePr"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_marginStart="50dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:background="@color/lightGrey"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/districtRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/stateRow"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/robotobold"
                        android:text="*"
                        android:textColor="@color/red"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/robotobold"
                        android:text="District:"
                        android:textColor="@color/black"
                        android:textSize="16dp" />


                    <Spinner
                        android:id="@+id/spinnerDistrictPr"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_marginStart="35dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/lightGrey"
                        android:spinnerMode="dropdown" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/telRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/districtRow"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/robotobold"
                        android:text="*"
                        android:textColor="@color/red"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/robotobold"
                        android:text="Tel:"
                        android:textColor="@color/black"
                        android:textSize="16dp" />


                        <EditText
                            android:id="@+id/etTelPr"
                            android:layout_width="150dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginStart="62dp"
                            android:padding="10dp"
                            android:background="@color/lightGrey"
                            android:fontFamily="@font/robotoregular"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:inputType="number"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/jobRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/telRow"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/robotobold"
                        android:text="*"
                        android:textColor="@color/red"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/robotobold"
                        android:text="Job:"
                        android:textColor="@color/black"
                        android:textSize="16dp" />



                        <EditText
                            android:id="@+id/etJobPr"
                            android:layout_width="200dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginStart="59dp"
                            android:padding="10dp"
                            android:background="@color/lightGrey"
                            android:fontFamily="@font/robotoregular"
                            android:textColor="@color/black"
                            android:textSize="16dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/salaryRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/jobRow"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/robotobold"
                        android:text="*"
                        android:textColor="@color/red"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/robotobold"
                        android:text="Salary:"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        />



                        <com.cottacush.android.currencyedittext.CurrencyEditText
                            android:id="@+id/etSalaryPr"
                            android:layout_width="150dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginStart="40dp"
                            android:background="@color/lightGrey"
                            android:fontFamily="@font/robotoregular"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:padding="10dp"
                            app:currencySymbol="RM"
                            app:useCurrencySymbolAsHint="true"/>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/buttonRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/salaryRow"
                    android:layout_marginTop="40dp">

                        <Button
                            android:id="@+id/btnBack_parent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="100dp"
                            android:background="@drawable/rounded_btn_grey"
                            android:text="Back"
                            android:textColor="@color/black"
                            android:layout_centerHorizontal="true" />

                        <Button
                            android:id="@+id/btnNext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="60dp"
                            android:background="@drawable/rounded_btn_black"
                            android:text="Next"
                            android:textColor="@color/white"
                            android:layout_centerHorizontal="true" />
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

    </ScrollView>


    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navigation" >


    </FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/cardview_light_background"
        app:menu="@menu/bottom_navigation"/>



</RelativeLayout>