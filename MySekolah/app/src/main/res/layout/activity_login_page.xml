<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:translationX="-1dp"
    android:translationY="1dp"
    tools:context=".Login_page">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:translationY="-1dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="270dp"
            android:layout_height="254dp"
            android:layout_marginStart="59dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="82dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:srcCompat="@drawable/loginpage" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="96dp"
            android:layout_marginEnd="161dp"
            android:layout_marginBottom="32dp"
            android:fontFamily="@font/robotobold"
            android:text="Welcome Back"
            android:textColor="@color/white"
            android:textSize="34sp"
            app:layout_constraintBottom_toTopOf="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.68"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="125dp"
            android:layout_height="48dp"
            android:layout_margin="18dp"
            android:layout_marginStart="79dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="324dp"
            android:background="@color/black"
            android:fontFamily="@font/robotoregular"
            android:text="Login"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:translationX="-20dp"
            android:translationY="-20dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_sign_up"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.579"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etx_password" />

        <Button
            android:id="@+id/btn_sign_up"
            android:layout_width="125dp"
            android:layout_height="48dp"
            android:layout_margin="18dp"
            android:layout_marginStart="79dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="324dp"
            android:background="@color/black"
            android:fontFamily="@font/robotoregular"
            android:text="Sign up"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:translationX="-20dp"
            android:translationY="-20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.579"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_login" />

        <EditText
            android:id="@+id/etx_ic_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="79dp"
            android:layout_marginTop="57dp"
            android:layout_marginBottom="11dp"
            android:backgroundTint="#7997B9"
            android:ems="10"
            android:hint="IC :xxxxxxxx-xxxx-xxx"
            android:inputType="text"
            android:shadowColor="#ECE6E6"
            app:layout_constraintBottom_toTopOf="@+id/etx_password"
            app:layout_constraintEnd_toStartOf="@+id/img_login_ic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <EditText
            android:id="@+id/etx_password"
            style="@android:style/Widget.DeviceDefault.AutoCompleteTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="77dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="13dp"
            android:layout_marginBottom="36dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            app:layout_constraintBottom_toTopOf="@+id/btn_login"
            app:layout_constraintEnd_toStartOf="@+id/img_login_pw"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etx_ic_number" />

        <ImageView
            android:id="@+id/img_login_ic"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="65dp"
            android:layout_marginEnd="75dp"
            android:layout_marginBottom="40dp"
            android:translationX="-3dp"
            android:translationY="-30dp"
            app:layout_constraintBottom_toTopOf="@+id/img_login_pw"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/etx_ic_number"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:srcCompat="@drawable/loginic" />

        <ImageView
            android:id="@+id/img_login_pw"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="80dp"
            android:translationX="0dp"
            android:translationY="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/etx_password"
            app:layout_constraintTop_toBottomOf="@+id/img_login_ic"
            app:srcCompat="@drawable/loginpassword" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>