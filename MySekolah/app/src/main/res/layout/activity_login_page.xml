<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <FrameLayout
            android:id="@+id/txt_welcome_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:gravity="center">
                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/robotobold"
                    android:text="Welcome Back"
                    android:textAlignment="center"
                    android:layout_margin="5dp"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    tools:ignore="RtlCompat" />
                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/imageView2"
                    android:scaleType="centerInside"
                    android:layout_width="225dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/mobile_login_8"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </FrameLayout>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="50dp"
            android:stretchColumns="0,1"
            android:layout_margin="@dimen/dp_10">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="left"
                android:gravity="left">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#7997B9"
                    android:layout_marginStart="70dp"
                    android:text="IC No"
                    android:shadowColor="#ECE6E6"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginBottom="25dp">

                <EditText
                    android:id="@+id/etx_ic_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#7997B9"
                    android:layout_marginStart="65dp"
                    android:hint="123456-78-9012"
                    android:inputType="text"
                    android:ems="10"
                    android:shadowColor="#ECE6E6"/>

                <ImageView
                    android:id="@+id/img_login_ic"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="50dp"
                    android:src="@drawable/loginic" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">

                <EditText
                    android:id="@+id/etx_password"
                    style="@android:style/Widget.DeviceDefault.AutoCompleteTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:layout_marginStart="65dp"
                    android:hint="Password"
                    android:inputType="textPassword"/>

                <ImageView
                    android:id="@+id/img_login_pw"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="50dp"
                    android:src="@drawable/loginpassword" />
            </TableRow>
        </TableLayout>
        <Button
            android:id="@+id/btn_login"
            android:layout_width="125dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/rounded_btn_black"
            android:fontFamily="@font/robotoregular"
            android:text="Login"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="New User? Create an Account"
            android:shadowColor="#ECE6E6"/>

        <Button
            android:id="@+id/btn_sign_up"
            android:layout_width="125dp"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="50dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_btn_black"
            android:fontFamily="@font/robotoregular"
            android:text="Sign up"
            android:textColor="@color/white"
            android:textSize="16sp"/>
    </LinearLayout>

    </ScrollView>

</RelativeLayout>