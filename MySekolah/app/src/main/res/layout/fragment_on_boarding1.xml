<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_gradient"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OnBoardingFragment1">


    <ImageView
        android:id="@+id/img_book"
        android:layout_width="246dp"
        android:layout_height="327dp"
        android:layout_marginStart="63dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="63dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.12"
        app:srcCompat="@drawable/book1" />


    <TextView
        android:id="@+id/tx_wecome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="130dp"
        android:layout_marginEnd="130dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="Welcome"
        android:textColor="@color/black"
        android:textSize="48sp"
        android:translationX="-13dp"
        app:layout_constraintBottom_toTopOf="@+id/tx_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.017"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_book"
        app:layout_constraintVertical_bias="0.206" />

    <TextView
        android:id="@+id/tx_1"
        android:layout_width="200dp"
        android:layout_height="96dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="118dp"
        android:layout_marginBottom="106dp"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:text="A Great Place for Education"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:translationX="-10dp"
        app:layout_constraintBottom_toTopOf="@+id/img_baddp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tx_wecome" />

    <TextView
        android:id="@+id/tx_companyname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="212dp"
        android:layout_marginBottom="55dp"
        android:gravity="center"
        android:text="mini_Congress Â© 2021"
        android:textSize="20sp"
        android:translationY="-35dp"
        app:layout_constraintBottom_toTopOf="@+id/img_baddp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_book" />

    <ImageView
        android:id="@+id/img_baddp"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginStart="109dp"
        android:layout_marginBottom="16dp"
        android:translationX="-60dp"
        android:translationY="-10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/slidedot" />

</androidx.constraintlayout.widget.ConstraintLayout>